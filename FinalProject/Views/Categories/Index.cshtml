@model List<FinalProject.Vm.CategoryVm>;
<!-- ============================================================== -->
<!-- data table  -->
<!-- ============================================================== -->
<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Brands</h5>

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered second" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Brand LOGO</th>
                            <th>Name</th>
                            <th>Creation Date</th>
                            <th class="datatable-nosort">Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var category in Model)
                        {

                            <tr>
                                <td>@category.Id</td>
                                <td><img class="rounded-circle" style="width:50px;" src="~/uploads/Brands/@category.ImageId" /></td>
                                <td>@category.Name</td>
                                <td>@category.CreationDate </td>>
                                <td>
                                    <div class="dropdown">
                                        <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                            <i class="dw dw-more"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                            <a class="dropdown-item" href="@Url.Action("Create", "category")"><i class="dw dw-eye"></i> Create</a>
                                            <a class="dropdown-item" href="@Url.ActionLink("Edit", "category", new { id = category.Id })"><i class="dw dw-edit2"></i> Edit</a>
                                            <a class="dropdown-item" href="@Url.ActionLink("Delete", "category", new { id = category.Id })"><i class="dw dw-delete-3"></i> Delete</a>
                                        </div>

                                    </div>
                                </td>
                            </tr>
                        }


                    </tbody>

                </table>
            </div>

        </div>
    </div>
    <a class="btn btn-primary " href="@Url.Action("Create","Brands")" role="button">Create</a>

</div>
<!-- ============================================================== -->
<!-- end data table  -->
<!-- ============================================================== -->

