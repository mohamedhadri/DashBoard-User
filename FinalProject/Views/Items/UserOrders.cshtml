@using FinalProject.Vm
 
@model IEnumerable<FinalProject.Vm.CheckOutVm>;
<!-- ============================================================== -->
<!-- data table  -->
<!-- ============================================================== -->
<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Items</h5>

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered second" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th> Item Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {

                        <tr>
                            <td>@item.Id</td>
                            <td>@item.ItemId</td>
                            <td>@item.FullName</td>
                            <td>@item.Email </td>
                            <td>@item.Phone </td>
                            <td>@item.Address </td>
                            <td>
                                <form action="ChangeStatus">
                                    <input type="hidden"  name="id" value="@item.Id"/>
                                    @item.OrderStatus
                                <select onchange="this.form.submit()" name="status">

                                    <!option value="@OrderStatus.Pending" @(item.OrderStatus == OrderStatus.Pending ? "selected" : "")>
                                    Pending
                                    </!option>

                                    <!option value="@OrderStatus.Prepparing" @(item.OrderStatus == OrderStatus.Prepparing ? "selected" : "")>
                                    Prepparing
                                    </!option>

                                    <!option value="@OrderStatus.OnTheWay" @(item.OrderStatus == OrderStatus.Pending ? "OnTheWay" : "")>
                                   OnTheWay
                                    </!option>

                                    <!option value="@OrderStatus.AtAddress" @(item.OrderStatus == OrderStatus.Pending ? "AtAddress" : "")>
                                    AtAddress
                                    </!option>

                                </select>
                                  

                                </form>
                        
                            </td>


                        </tr>
                        }


                    </tbody>

                </table>
            </div>

        </div>
    </div>


</div>
<!-- ============================================================== -->
<!-- end data table  -->
<!-- ============================================================== -->

