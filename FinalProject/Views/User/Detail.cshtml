@{
    Layout = "_UserLayout";
    @model FinalProject.Vm.ItemsVm;
}


<div class="brand-bg">
    <div class="container font-weight-bold">
        <div class="row">
           
            
            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 margin">
               
               
                <div class="brand_box">
                    <div>@Model.BrandName </div>
                    <img src="~/uploads/Items/@(Model.Images.FirstOrDefault()).png" alt="img" />
                    <h3>$<strong class="red"></strong>@Model.Price</h3>
                    <span>@Model.Name</span>
                    <div>@Model.Description</div>
                    <i><img src="~/user/images/star.png" /></i>
                    <i><img src="~/user/images/star.png" /></i>
                    <i><img src="~/user/images/star.png" /></i>
                    <i><img src="~/user/images/star.png" /></i> <br />
                    <a style="font-size:30px;" href="@Url.ActionLink("CheckOut", "User", new{id = Model.Id})">Checkout </a>
                </div>
                
            </div>
            
        </div>
    </div>
</div>



   
